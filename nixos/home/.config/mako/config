# Mako notification configuration

# Position and layout
anchor=top-right
width=400
height=120
margin=15
padding=20
border-size=2
border-radius=12

# Colors (Catppuccin theme)
background-color=#1e1e2e
text-color=#cdd6f4
border-color=#89b4fa
progress-color=over #74c7ec

# Typography
font=JetBrains Mono 12

# Behavior
default-timeout=5000
ignore-timeout=0
max-history=50
sort=-time
layer=overlay
max-visible=3

# Icons
icons=1
max-icon-size=64
icon-path=/run/current-system/sw/share/icons/Adwaita:/run/current-system/sw/share/pixmaps

# Grouping
group-by=app-name

# Input handling
on-button-left=dismiss
on-button-middle=none  
on-button-right=dismiss-all
on-touch=dismiss

# Format
format=<b>%s</b>\n%b
markup=1

# Application-specific styles
[app-name="Volume"]
border-color=#a6e3a1
background-color=#313244
default-timeout=2000
format=<b>%s</b>\n%b

[app-name="Brightness"]
border-color=#f9e2af
background-color=#313244  
default-timeout=2000
format=<b>%s</b>\n%b

[app-name="Network"]
border-color=#89dceb
format=<b>%s</b>\n%b

# Urgency-based styling
[urgency=critical]
background-color=#f38ba8
text-color=#1e1e2e
border-color=#f38ba8
default-timeout=0
ignore-timeout=1

[urgency=high]
background-color=#fab387
text-color=#1e1e2e
border-color=#fab387
default-timeout=10000

[urgency=low]
background-color=#45475a
default-timeout=3000

