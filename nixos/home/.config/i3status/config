# i3status config file
general {
    colors = true
    interval = 5
}

order += "cpu_usage"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

cpu_usage {
    format = "CPU: %usage"
}

memory {
    format = "MEM: %used/%total"
}

wireless _first_ {
    format_up = "WiFi: %quality"
    format_down = "WiFi: down"
}

battery all {
    format = "BAT: %percentage"
    format_down = "BAT: none"
    last_full_capacity = true

    # Colors
    color_good = "#00ff00"   # charging
    color_bad  = "#ff0000"   # discharging
    color_degraded = "#ffff00"
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}
